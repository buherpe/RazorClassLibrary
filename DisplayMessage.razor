<button type="button" class="btn btn-primary" @onclick="@Yes">Да</button>

<button type="button" class="btn btn-primary" @onclick="@No">Нет</button>

<button type="button" class="btn btn-secondary" @onclick="@Cancel">Отмена</button>

@code {
    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; } = default!;
    
    public async Task Yes()
    {
        await BlazoredModal.CloseAsync(ModalResult.Ok(true));
    }

    public async Task No()
    {
        await BlazoredModal.CloseAsync(ModalResult.Ok(false));
    }

    public async Task Cancel()
    {
        await BlazoredModal.CloseAsync(ModalResult.Cancel());
    }
}
